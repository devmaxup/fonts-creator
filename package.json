{
  "name": "fonts-creator",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "postinstall": "cd client && yarn install && cd ../server && yarn install",
    "dev": "concurrently \"cd client && yarn dev\" \"cd server && yarn dev\"",
    "build": "cd client && yarn build",
    "lint": "concurrently \"cd client && yarn lint\" \"cd server && yarn lint\""
  },
  "dependencies": {
    "concurrently": "^4.1.0"
  },
  "eslintConfig": {
    "env": {
      "node": true
    },
    "rules": {
      "import/prefer-default-export": 0
    },
    "extends": [
      "eslint:recommended",
      "airbnb-base"
    ]
  },
  "devDependencies": {
    "babel-eslint": "10.0.2",
    "eslint": "6.1.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.17.3"
  }
}
